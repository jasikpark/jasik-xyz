{
    "extends": [
        "html-validate:recommended"
    ],
    "rules": {
        "void-style": [
            "error",
            {
                "style": "selfclosing"
            }
        ],
        "no-trailing-whitespace": [
            "off"
        ],
        "no-inline-style": [
            "warn"
        ],
        "svg-focusable": [
            "off"
        ]
    }
}